<head>
	<meta charset="utf-8">
	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>Mumsnet Technical Test</title>

	<link rel="stylesheet" href="/css/libraries.css">
	<link rel="stylesheet" href="/css/app.css">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript"></script>
</head>
<body>
{{> header }}
<div class="registration">
	<div class="container-fluid">
		<h1 class="registration__heading">{{ heading }}</h1>
		<h3 class="registration__subheading">{{ subheading }}</h3>
		<div class="row">
			<div class="col-xs-12 col-sm-6">
				{{#each cards}}
					{{> card this }}
				{{/each}}
			</div>
			<div class="col-xs-12 col-sm-6">
				{{> recommendation recommendations }}
			</div>
		</div>
		<div class="registration__terms">
			By registering, you agree to our <a href="">Terms of Use</a> and our <a href="">Talk Guidelines</a>
		</div>

		<button class="registration__submit">
			{{ submit }}
		</button>

	</div>
</div>
{{> footer }}

<script src="/js/app.js"></script>
</body>